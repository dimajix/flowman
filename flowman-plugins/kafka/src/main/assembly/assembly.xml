<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>plugins/${plugin.name}</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>plugin.yml</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>plugins/${plugin.name}</outputDirectory>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <excludes>
                <exclude>com.dimajix.flowman:flowman-spec</exclude>
                <exclude>org.scala-lang.modules:scala-collection-compat_${scala.api_version}</exclude>
                <exclude>org.lz4:lz4-java</exclude>
                <exclude>com.github.luben:zstd-jni</exclude>
                <exclude>org.apache.hadoop:hadoop-client-api</exclude>
                <exclude>org.apache.hadoop:hadoop-client-runtime</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
